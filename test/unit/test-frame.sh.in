#!@SH_PROG@
# -*- shell-script -*-
test_frame()
{
    _Dbg_frame_save_frames 0
    ## FIXME: get different counts on this 4 or 5
    ## assertEquals 5 ${#_Dbg_frame_stack[@]}
    _Dbg_frame_filename=''
    _Dbg_set_basename=1
    _Dbg_frame_file a b c
    assertNotEquals 0 "$?"
    _Dbg_frame_filename=''
    _Dbg_frame_file
    assertEquals 0 "$?"
    assertEquals 'test-frame.sh' "$_Dbg_frame_filename"
}

test_frame_adjust()
{
    _Dbg_errmsg() {
       errmsg+=("$1")
    }
    _Dbg_running=1
    typeset -a errmsg=()
    _Dbg_frame_save_frames 0
    ## FIXME: get different counts on this 4 or 5
    ## assertEquals 5 ${#_Dbg_frame_stack[@]}

    # Test frame_adjust parameter checking
    _Dbg_frame_adjust a
    assertNotEquals 0 "$?"

    # Test absolute positioning - ok values (0..3)
    for i in 0 1 2 3 -1 -2 -3; do
	_Dbg_frame_adjust $i 0
	assertEquals 0 ${#errmsg[@]}
    done

    # Test invalid values
    for pair in '5 0' '4 -1' '4 +1' '-6 0'; do
	unset errmsg; errmsg=()
	_Dbg_stack_pos=2
	_Dbg_frame_adjust $pair
	assertNotEquals "want nonzero return value for: _Dbg_frame_adjust $pair --" 0 "$?"
	assertNotEquals 0 ${#errmsg[@]}
    done
}

if [ '@abs_top_srcdir@' = '' ] ; then
  echo "Something is wrong abs_top_srcdir is not set."
 exit 1
fi
abs_top_srcdir=@abs_top_srcdir@
